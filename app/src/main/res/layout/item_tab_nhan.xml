<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/background_item_status">

        <TextView
            android:id="@+id/name_poster_tab_nhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_narrow"
            android:text="Mac Van Khoa fanpage"
            android:textColor="@color/colorText"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_start_place_tab_nhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/archivo_narrow"
                android:text="285/33 Trần Cao Vân - Đà Nẵng "
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="15sp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_baseline_arrow_right_alt_24" />

            <TextView
                android:id="@+id/txt_end_place_tab_nhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/archivo_narrow"
                android:text="234 Tôn Đản- Đà Nẵng "
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="15sp"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>