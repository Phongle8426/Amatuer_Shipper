<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cWhite"
    android:orientation="vertical"
    tools:context=".ApplicationIntroduce">

    <ImageView
        android:id="@+id/image_owl"
        android:layout_width="wrap_content"
        android:layout_height="316dp"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:src="@drawable/thenow"
       ></ImageView>

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/muli_semibold"
        android:text="Amature Shipping for Machents"
        android:textColor="@color/colorText"
        android:textSize="23sp"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/tv_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_owl"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/archivo_narrow"
        android:text="Delivering happiness to you."
        android:textColor="@color/colorText"
        android:textSize="18sp"
     ></TextView>
</LinearLayout>